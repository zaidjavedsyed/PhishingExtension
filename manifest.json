{
  "manifest_version": 3,
  "name": "Phishing Website Detector",
  "version": "1.0.0",
  "description": "A Chrome extension that detects phishing websites using machine learning. Protects you from malicious URLs with real-time analysis powered by XGBoost and BERT models.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Detector",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["warning.html", "warning.js", "XGBoostClassifier.pickle.dat"],
      "matches": ["<all_urls>"]
    }
  ]
}
